<div class="component__inner basic-question__inner">
  {{> component this}} 

  <div class="basic-question__main">

    <div class="basic-question__question" tabindex="0" >{{{question}}}</div>
    
  {{#each _items}}
    <button class="basic-question__option js-select-option" data-index="{{@index}}" role="button" aria-pressed="false" tabindex="0" >{{text}}</button>
  {{/each}}
  
    <div class="basic-question__buttons button" id="basic-question__buttons">
      <button class="basic-question__btn btn js-submit-click" aria-label="{{buttonText}}" role="button" aria-pressed="false" tabindex="0">
        <span>{{buttonText}}</span>
      </button>
      <button class="basic-question__btn btn js-feedback-click is-hidden" aria-label="{{buttonFeedbackText}}" role="button" aria-pressed="false" tabindex="0">
        <span>{{buttonFeedbackText}}</span>
      </button>
    </div>
  </div> 

  
  
  {{!-- {{#if body}} {{/if}} --}}

</div>
